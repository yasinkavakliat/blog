---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION } from "../consts";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="flex min-h-screen flex-col bg-white font-sans text-black antialiased dark:bg-zinc-900 dark:text-white"
  >
    <Header />

    <main class="relative mx-auto w-full max-w-prose flex-grow px-4 md:px-0">
      <div
        class="prose prose-zinc mx-auto flex w-full max-w-prose flex-col pb-8 dark:prose-invert prose-img:my-0 prose-img:rounded prose-hr:my-4"
      >
        <slot />
      </div>
    </main>

    <!-- <Footer /> -->

    <!-- Cloudflare Web Analytics -->
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "70b90f9016914e0faab1191e5bca44c8"}'
    ></script><!-- End Cloudflare Web Analytics -->
  </body>
</html>
