---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION } from "../consts";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex h-svh w-full flex-col bg-zinc-900 font-sans antialiased">
    <Header />

    <main
      class="mx-4 flex-1 overflow-y-scroll rounded-2xl bg-white px-4 py-4 shadow-xl shadow-black"
    >
      <div class="container prose prose-lg mx-auto">
        <slot />
      </div>
    </main>

    <Footer />

    <!-- Cloudflare Web Analytics -->
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "70b90f9016914e0faab1191e5bca44c8"}'
    ></script><!-- End Cloudflare Web Analytics -->
  </body>
</html>
